{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceName": {
            "type": "string",
            "metadata": {
                "desription": "Name of container to create."
            }
        },
        "storageAccountName": {
            "type": "string",
            "metadata": {
                "description": "Name of Storage Account to which to deploy the new container"
            }
        },
        "storageAccountId": {
            "type": "string",
            "metadata": {
                "description": "Full Azure ID of Storage Account to which to deploy the new container"
            }
        },
        "publicAccessLevel": {
            "type": "string",
            "defaultValue": "None",
            "allowedValues": [
                "None",
                "Blob",
                "Container"
            ],
            "metadata": {
                "description": "Level of public access (without SAS token) to container. None for no access, Blob for file access, Container for container access"
            }
        }
    },
    "variables": {
        "containerName": "[parameters('resourceName')]"
    },
    "resources": [
        {
            "comments": "Deploy blob container to existing Storage Account (storage account name given as parameter).",
            "dependsOn": [
                "[parameters('storageAccountId')]"
            ],
            "name": "[concat(parameters('storageAccountName'),'/default/', variables('containerName'))]",
            "type": "Microsoft.Storage/storageAccounts/blobServices/containers",
            "apiVersion": "2018-03-01-preview",
            "properties": {
                "publicAccess": "[parameters('publicAccessLevel')]"
            }
        }
    ],
    "outputs": {}
}